{
  "displayName": "Unit",
  "collectCoverage": true,
  "collectCoverageFrom": ["**/*.ts"],
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "/fixtures/"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 0,
      "functions": 0,
      "lines": 0,
      "statements": 0
    }
  },
  "moduleFileExtensions": ["ts", "js", "json"],
  "rootDir": "src",
  "testEnvironment": "node",
  "testMatch": ["<rootDir>/**/*.spec.ts"],
  "testPathIgnorePatterns": ["/node_modules"],
  "transform": {
    "^.+\\.ts?$": "ts-jest"
  }
}
